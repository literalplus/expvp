<!--suppress ALL -->
<Configuration status="trace" monitorInterval="60" name="Expvp">
    <properties>
        <property name="filters">com.mysql,sun.reflect,java.lang.reflect,net.minecraft</property>
        <property name="pattern">[%d{HH:mm:ss} %p]: %-20.20c{1.} || %msg %xEx{filters(${filters})}%n</property>
    </properties>

    <Appenders>
        <RollingFile name="MainLogFile" fileName="${sys:exp.logsdir}expvp.log"
                     filePattern="${sys:exp.logsdir}expvp/$${date:yyyy-MM}/%d{yyyy-MM}.log.gz">
            <PatternLayout pattern="${pattern}"/>
            <TimeBasedTriggeringPolicy/>
            <DefaultRolloverStrategy max="60"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="me.minotopia.expvp" level="info" additivity="false">
            <AppenderRef ref="MainLogFile"/>
        </Logger>
        <Root/>
    </Loggers>
</Configuration>
